extends base.pug 

block scripts
  script(src='/static/script.js')

block style 
    style 
        include ../static/style.css 

block content
    section#introSection 
        div   Welcome to BTS Dance Academy
        div.small   Anybody can Dance
    
    section#missionSection 
        h2  Our Mission
        div.card 
            h4 Dance Perfection
            div.card-box
                div.card-img
                    img(src="/static/img/1.png")
                div.card-content
                    p 
                       |Experience full-body workouts featuring the hottest songs, hype instructors, and dance moves you’d actually do IRL.
        div.card 
            h4 Welcome to community
            div.card-box
                div.card-img
                    img(src="/static/img/2.jpg")
                div.card-content
                    p 
                       |BDA tools make your online learning experience just like a class at a physical studio – but better.
        div.card 
            h4 Start With The Basics
            div.card-box
                div.card-img
                    img(src="/static/img/3.png")
                div.card-content
                    p 
                       |No rhythm? No confidence? No clue where to start? Take our top rated “Intro to Dance” program alongside over 200,000 other new dancers.

    section#sponsorSection 
        h2   Our Sponsors 
        div#sponsors 
            img(src="/static/img/logo1.png" alt="Sponsor Image" class="spImage")
            img(src="/static/img/logo2.png" alt="Sponsor Image" class="spImage")
            img(src="/static/img/logo3.png" alt="Sponsor Image" class="spImage")
            img(src="/static/img/logo4.png" alt="Sponsor Image" class="spImage")
